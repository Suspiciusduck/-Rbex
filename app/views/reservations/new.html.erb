<div class="container mt-3 w-50">
  <div data-controller="total-price">
    <h1><strong>New Reservation</strong></h1>
    <h5><em>You will book for ad : <strong><%= @add.title %></strong></em></h5>

  <div class="mt-4">
    <%= simple_form_for [@add, @reservation] do |f| %>
      <%= f.input :check_in,
              as: :string,
              input_html: { data: { controller: "datepicker", action: "change->total-price#calcul" } } %>
      <%= f.input :check_out,
              as: :string,
              input_html: { data: { controller: "datepicker", action: "change->total-price#calcul" } } %>
      <%= f.submit "Book", class: "btn btn-primary" %>
    <% end %>
  </div>

    <div class="mt-4">
      <p>Price / day : <i id="price"><%= @add.price %></i> â‚¬ </p>
      <p data-total-price-target="price"></p>
    </div>

  </div>
</div>
