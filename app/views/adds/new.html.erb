<div class="container mt-3 w-50">
  <h1><strong>New Ad</strong></h1>

  <div class="mt-4">
    <%= simple_form_for [@add] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :availability,
              as: :check_boxes %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
