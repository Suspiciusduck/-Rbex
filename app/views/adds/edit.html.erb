<div class="container mt-3">
  <h1>Edit Ad : <strong><%= @add.title %> </h1>

  <div class="mt-4">
    <%= simple_form_for [@add] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :availability, as: :boolean do
          f.check_box :availability, {}, true, false
          end %>
      <%= f.input :city %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Edit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
