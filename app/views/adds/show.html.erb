<div class="listing-container">
  <div class="listing-details">
    <%= simple_form_for @add do |f| %>
      <div class="listing-image">
        <%= f.input :photo, as: :file, label: "Listing Image" %>
      </div>
      <h1><%= @add.title %></h1>
      <p><%= @add.description %></p>
      <p><strong>Price:</strong> <%= @add.price %></p>
      <p><strong>Availability:</strong> <%= @add.availability %></p>
      <p><strong>City: <%= @add.city %></strong></p>
      <p><strong>Posted by:</strong> <%= @add.user.email %></p>
      <button class="contact-button">Contact Host</button>
      <%= link_to "RÃ©server", new_add_reservation_path(@add), class: "contact-button" %>
    <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
