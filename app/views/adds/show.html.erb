<div class="listing-container">
  <div class="listing-details">
    <div class="carousel-container">
      <div class="carousel" id="image-carousel">
    <% @random_images.each do |image| %>
      <div class="carousel-item">
        <%= cl_image_tag image["public_id"], alt: "Image", class: "carousel-image" %>
      </div>
    <% end %>
      </div>
      <h1><%= @add.title %></h1>
      <p><%= @add.description %></p>
      <p><strong>Price:</strong> <%= @add.price %> â‚¬ </p>
      <p><strong>Availability:</strong> <%= @add.availability %></p>
      <p><strong>City: <%= @add.city %></strong></p>
      <p><strong>Posted by:</strong> <%= @add.user.email %></p>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="button-container">
  <%= link_to "Reservation", new_add_reservation_path(@add), class: "contact-button reservation-button" %>
  <%= link_to "Edit Ad", edit_add_path(@add), class: "contact-button edit-button" %>
  <%= link_to "Delete Ad", add_path(@add), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "contact-button delete-button" %>
  </div>
</div>
