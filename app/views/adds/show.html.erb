<div class="listing-container">
  <div class="listing-details">
    <div class="carousel-container">
      <div class="carousel">
        <div class="carousel-item">
          <img src="https://res.cloudinary.com/duxybhdw5/image/upload/v1692957345/yvzmcjutxjn7hikfnl3z.jpg" alt="Image 1">
        </div>
        <div class="carousel-item">
          <img src="https://res.cloudinary.com/duxybhdw5/image/upload/v1692957344/agaz7k9hj4juvukv01aq.jpg" alt="Image 2">
        </div>
        <div class="carousel-item">
          <img src="https://res.cloudinary.com/duxybhdw5/image/upload/v1692949083/cld-sample-2.jpg" alt="Image 3">
        </div>
      </div>
    </div>
    <h1><%= @add.title %></h1>
    <p><%= @add.description %></p>
    <p><strong>Price:</strong> <%= @add.price %></p>
    <p><strong>Availability:</strong> <%= @add.availability %></p>
    <p><strong>Address:</strong> <%= @add.address %></p>
    <p><strong>Posted by:</strong> <%= @add.user.email %></p>
    <div class="button-container">
      <button class="contact-button">Contact Host</button>
      <%= link_to "Reservation", new_add_reservation_path(@add), class: "contact-button" %>
    </div>
  </div>
</div>
