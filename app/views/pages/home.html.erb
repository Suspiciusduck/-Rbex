<h1>Clone Home Page</h1>

<div class="cards">
  <% @adds.each do |add| %>
    <div class="card">
      <%= link_to add_path(add), rel: "noopener noreferrer nofollow", target: "listing_#{add.id}", aria_labelledby: "title_#{add.id}" do %>
        <%= image_tag "https://source.unsplash.com/random/?urbex#", class: "l1ovpqvx bn2bl2p dir dir-ltr img-fluid" %>
      <% end %>
      <h2><%= add.title %></h2>
      <p>Rating</p>
      <p>Price <%= add.price %></p>
    </div>
  <% end %>
</div>
